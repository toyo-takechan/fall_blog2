<form>
  <h1>Users#new</h1>
  <div class="form_container">
    <%= form_with(model: @user, local: true) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "新規登録" %>
    <% end %>
  </div>

</form>
