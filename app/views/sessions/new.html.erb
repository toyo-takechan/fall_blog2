<div class ="form" >
 <div class ="form_h1">ログインフォーム</div>

 <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

  <%= f.label :email, class: "form_label" %>
  <%= f.email_field :email, class: "form_control" %>

  <%= f.label :password, class: "form_label" %>
  <%= f.password_field :password, class: "form_control" %>

  <%= f.label :remember_me, class: "form_checlbox" do %>
    <%= f.check_box :remember_me %>
    <span>ログイン状態を保持する</span>
  <% end %>

  <%= f.submit "ログイン", class: "form_button" %>

  <p>新しいユーザーですか？<%=link_to "新規登録", signup_path %></p>

 <% end %>
</div>
